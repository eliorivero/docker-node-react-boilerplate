{
	"name": "docker-node-react",
	"version": "0.0.7",
	"description": "Tools for code linting and formatting",
	"author": "StartFunction",
	"license": "GPL-3.0-or-later",
	"main": "server/index.js",
	"scripts": {
		"start": "node index.js",
		"build": "NODE_ENV=production webpack",
		"server": "DEBUG=express nodemon server/index.js",
		"client": "NODE_ENV=development webpack-dev-server --mode development --devtool inline-source-map",
		"test": "jest",
		"test:watch": "jest --watch",
		"lint": "eslint --ext js,ts,tsx .",
		"lint:fix": "eslint --fix --ext js,ts,tsx ."
	},
	"devDependencies": {
		"@babel/core": "^7.9.6",
		"@babel/plugin-transform-runtime": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"@babel/preset-react": "^7.9.4",
		"@babel/preset-typescript": "^7.9.0",
		"@babel/runtime": "^7.9.6",
		"@hot-loader/react-dom": "^16.13.0",
		"@types/enzyme": "^3.10.5",
		"@types/jest": "^26.0.7",
		"@types/react": "^16.9.35",
		"@types/react-dom": "^16.9.8",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"@typescript-eslint/parser": "^3.7.0",
		"@wordpress/eslint-plugin": "^7.1.0",
		"babel-jest": "^26.0.1",
		"babel-loader": "^8.1.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^6.0.3",
		"css-loader": "^3.5.3",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"eslint": "^7.5.0",
		"html-webpack-plugin": "^4.3.0",
		"husky": "^4.2.5",
		"jest": "^26.0.1",
		"lint-staged": "^10.2.11",
		"mini-css-extract-plugin": "^0.9.0",
		"nodemon": "^2.0.4",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"prettier": "npm:wp-prettier@^2.0.5",
		"prop-types": "^15.7.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-hot-loader": "^4.12.21",
		"react-test-renderer": "^16.13.1",
		"sass": "^1.26.10",
		"sass-loader": "^8.0.2",
		"source-map-loader": "^0.2.4",
		"style-loader": "^1.2.1",
		"terser-webpack-plugin": "^3.0.1",
		"ts-loader": "^7.0.4",
		"typescript": "^3.9.2",
		"webpack": "^4.44.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"core-js": "^3.6.5",
		"express": "^4.17.1"
	},
	"nodemonConfig": {
		"ignore": [
			"client/*"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix --ext js,ts,tsx"
		]
	}
}
